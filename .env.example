# ============================================
# Agentbase Environment Configuration
# ============================================
# Copy this file to .env and update the values

# --- Application ---
NODE_ENV=development
APP_PORT=3001
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# --- PostgreSQL ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=agentbase
POSTGRES_PASSWORD=agentbase_dev
POSTGRES_DB=agentbase

# --- MongoDB ---
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USER=agentbase
MONGO_PASSWORD=agentbase_dev
MONGO_DB=agentbase
MONGO_URI=mongodb://agentbase:agentbase_dev@localhost:27017/agentbase?authSource=admin

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=agentbase_dev

# --- JWT Authentication ---
JWT_SECRET=CHANGE_ME_TO_A_RANDOM_SECRET_KEY
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=CHANGE_ME_TO_ANOTHER_RANDOM_SECRET
JWT_REFRESH_EXPIRATION=7d

# --- AI Providers ---
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_API_KEY=

# --- AI Service ---
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_PORT=8000

# --- OAuth (optional) ---
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# --- Stripe (Phase 4) ---
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# --- Email (optional) ---
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@agentbase.dev

# --- File Uploads (Phase 5) ---
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=

# --- Custom Domains (Phase 6) ---
PLATFORM_DOMAIN=custom.agentbase.dev

# --- Deployment ---
HTTP_PORT=80
HTTPS_PORT=443
ENABLE_SWAGGER=false
