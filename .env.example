# ============================================
# Agentbase Environment Configuration
# ============================================
# Copy this file to .env and update the values

# --- Application ---
NODE_ENV=development
APP_PORT=3001
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# --- PostgreSQL ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=agentbase
POSTGRES_PASSWORD=agentbase_dev
POSTGRES_DB=agentbase

# --- MongoDB ---
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USER=agentbase
MONGO_PASSWORD=agentbase_dev
MONGO_DB=agentbase
MONGO_URI=mongodb://agentbase:agentbase_dev@localhost:27017/agentbase?authSource=admin

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=agentbase_dev

